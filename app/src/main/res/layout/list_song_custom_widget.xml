<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView android:background="#F2F2F2"
    android:id="@+id/album_cardView"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:layout_marginBottom="13dp"
    app:cardElevation="0dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="#F2F2F2"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/top_line"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#D7D7D7" />

        <ImageView
            android:padding="10dp"
            android:id="@+id/ic_more"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_more"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/album_img"
            android:src="@drawable/albumimg"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/top_line"
            android:layout_width="70dp"
            android:layout_height="50dp" />

        <TextView
            android:textColor="#5E5E5E"
            android:id="@+id/album_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="17dp"
            android:fontFamily="@font/avenirnext"
            android:text="What do you mean "
            android:textSize="16sp"
            app:layout_constraintLeft_toRightOf="@id/album_img"
            app:layout_constraintTop_toTopOf="@id/top_line" />

        <TextView
            android:textColor="#5E5E5E"
            android:id="@+id/album_artist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/avenirnext"
            android:text="Justin"
            android:textSize="12sp"
            app:layout_constraintLeft_toRightOf="@id/album_img"
            app:layout_constraintTop_toBottomOf="@id/album_name" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>



